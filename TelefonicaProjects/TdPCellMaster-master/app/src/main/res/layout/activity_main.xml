<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/holo"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteY="81dp">


    <TextView
        android:id="@+id/netTypeTx"
        android:layout_width="171dp"
        android:layout_height="39dp"
        android:gravity="center"
        android:text="Technology"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Display1"
        android:textColor="@color/materialw"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/detailsNetTx"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/detailsNetTx"
        android:layout_width="215dp"
        android:layout_height="103dp"
        android:text="Here you'll see the network info in real time!"
        android:textColor="@color/materialw"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/latitud"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/netTypeTx" />

    <TextView
        android:id="@+id/latitud"
        android:textSize="20dp"
        android:layout_width="132dp"
        android:layout_height="23dp"
        android:text="Latitud: "
        android:textColor="@color/materialw"
        app:layout_constraintBottom_toTopOf="@+id/longitud"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detailsNetTx" />

    <TextView
        android:textSize="20dp"
        android:id="@+id/longitud"
        android:layout_width="131dp"
        android:layout_height="28dp"
        android:text="Longitud: "
        android:textColor="@color/materialw"
        app:layout_constraintBottom_toTopOf="@+id/relativeLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/latitud" />

    <include
        android:id="@+id/tool_bar"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</android.support.constraint.ConstraintLayout>