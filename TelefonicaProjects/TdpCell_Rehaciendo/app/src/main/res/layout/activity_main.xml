<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/holo"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/netTypeTx"
        android:layout_width="171dp"
        android:layout_height="39dp"
        android:gravity="center"
        android:text="Technology"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Display1"
        android:textColor="@color/materialw"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/detailsNetTx"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/detailsNetTx"
        android:layout_width="215dp"
        android:layout_height="103dp"
        android:text="Información de la red."
        android:textColor="@color/materialw"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/latitud"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/netTypeTx" />

    <TextView
        android:id="@+id/latitud"
        android:layout_width="132dp"
        android:layout_height="23dp"
        android:text="Latitud: "
        android:textColor="@color/materialw"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/longitud"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detailsNetTx" />

    <TextView
        android:id="@+id/longitud"
        android:layout_width="131dp"
        android:layout_height="28dp"
        android:text="Longitud: "
        android:textColor="@color/materialw"
        android:textSize="20dp"

        app:layout_constraintBottom_toTopOf="@+id/buttonSearch"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/latitud" />

    <Button
        android:id="@+id/buttonSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        app:layout_constraintBottom_toTopOf="@+id/textRes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/longitud" />

    <TextView
        android:id="@+id/textRes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resulado de búsqueda"
        android:textColor="@color/materialw"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonSearch" />

</androidx.constraintlayout.widget.ConstraintLayout>